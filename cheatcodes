    }


find sum of every row:
  for (int i = 0; i < ROWS; i++) {
        int rowSum = 0;

        for (int j = 0; j < COLS; j++) {
            rowSum += matrix[i][j];
        }

        printf("Sum of elements in row %d: %d\n", i + 1, rowSum);
    }

find sum of every col:
    for (int j = 0; j < COLS; j++) {
        int colSum = 0;

        for (int i = 0; i < ROWS; i++) {
            colSum += matrix[i][j];
        }

        printf("Sum of elements in column %d: %d\n", j + 1, colSum);
    }

