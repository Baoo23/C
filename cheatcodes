void swapRows(int arr[5][5]){
    int i, tmp;
    for(i = 0; i < 5; ++i){
        tmp = arr[0][i];
        arr[0][i] = arr[4][i];
        arr[4][i] = tmp;
    }

    printf("\nswapped:\n");
    for(int i = 0; i < 5; ++i){
        for(int j = 0; j < 5; ++j){
            printf("%d\t", arr[i][j]);
        }
        printf("\n");
    }
}
void swapCol(int arr[5][5]){
    int i, tmp;
    for(i = 0; i < 5; ++i){
        tmp = arr[i][0];
        arr[i][0] = arr[i][4];
        arr[i][4] = tmp;
    }

    printf("\nswapped:\n");
    for(int i = 0; i < 5; ++i){
        for(int j = 0; j < 5; ++j){
            printf("%d\t", arr[i][j]);
        }
        printf("\n");
    }
}

find max in every col:
for (int j = 0; j < COLS; j++) {
        int max = matrix[0][j];

        for (int i = 1; i < ROWS; i++) {
            if (matrix[i][j] > max) {
                max = matrix[i][j];
            }
        }

find max and index in MainD:
    for (int i = 0; i < 5; i++) {
        if (matrix[i][i] > max) {
            max = matrix[i][i];
            maxindexi = i;
            maxindexj = i;
